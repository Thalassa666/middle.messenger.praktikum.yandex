{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "tsc && vite build && node server.js",
    "lint": "eslint .",
    "lint:styles": "stylelint 'src/**/*.css'",
    "prepare": "husky install",
    "test": "mocha",
    "precommit": "npx lint-staged && npm test"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.css": [
      "prettier --write",
      "stylelint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@types/chai": "^4.3.17",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.12.7",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "autoprefixer": "^10.4.19",
    "chai": "^5.1.1",
    "eslint": "^8.56.0",
    "globals": "^15.2.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "mocha": "^10.7.3",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "prettier": "3.3.3",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "@types/sinon": "^17.0.3",
    "express": "^4.19.2",
    "handlebars": "^4.7.8",
    "hbs": "^4.2.0",
    "jsdom": "^24.1.1",
    "sinon": "^18.0.0",
    "uuid": "^9.0.1",
    "vite-plugin-handlebars": "^2.0.0"
  }
}
